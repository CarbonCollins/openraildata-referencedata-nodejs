  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Yarn Test",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "run",
        "test"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Dev Test ES6",
      "program": "${workspaceFolder}\\tests.old\\devTest.mjs",
      "runtimeArgs": [
        "--experimental-modules"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "compile"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Dev Test ES5",
      "program": "${workspaceFolder}\\tests.old\\devTest.js",
      "console": "integratedTerminal",
      "preLaunchTask": "compile"
    }
  ]
}